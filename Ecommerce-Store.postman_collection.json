{
	"info": {
		"_postman_id": "ecommerce-store-api",
		"name": "E-commerce Store API",
		"description": "API collection for E-commerce Store with cart and checkout functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Items",
			"item": [
				{
					"name": "Get All Items",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/items",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"items"
							]
						},
						"description": "Retrieve all available items in the store"
					},
					"response": []
				}
			]
		},
		{
			"name": "Cart",
			"item": [
				{
					"name": "Add Item to Cart (New Cart)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"itemId\": \"item-1\",\n    \"quantity\": 2\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/cart/items",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"cart",
								"items"
							]
						},
						"description": "Add item to a new cart (no cartId parameter)"
					},
					"response": []
				},
				{
					"name": "Add Item to Cart (Existing Cart)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"itemId\": \"item-2\",\n    \"quantity\": 1\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/cart/items?cartId={{cartId}}",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"cart",
								"items"
							],
							"query": [
								{
									"key": "cartId",
									"value": "{{cartId}}",
									"description": "Cart ID from previous request"
								}
							]
						},
						"description": "Add item to an existing cart using cartId"
					},
					"response": []
				},
				{
					"name": "Get Cart",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/cart/{{cartId}}",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"cart",
								"{{cartId}}"
							]
						},
						"description": "Get cart details by cart ID"
					},
					"response": []
				},
				{
					"name": "Remove Item from Cart",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/cart/{{cartId}}/items/{{itemId}}",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"cart",
								"{{cartId}}",
								"items",
								"{{itemId}}"
							]
						},
						"description": "Remove specific item from cart"
					},
					"response": []
				}
			]
		},
		{
			"name": "Checkout",
			"item": [
				{
					"name": "Checkout without Discount",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"cartId\": \"{{cartId}}\"\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/checkout",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"checkout"
							]
						},
						"description": "Process checkout without discount code"
					},
					"response": []
				},
				{
					"name": "Checkout with Discount",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"cartId\": \"{{cartId}}\",\n    \"discountCode\": \"DISC10\"\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/checkout",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"checkout"
							]
						},
						"description": "Process checkout with discount code"
					},
					"response": []
				}
			]
		},
		{
			"name": "Admin",
			"item": [
				{
					"name": "Get Admin Statistics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/admin/stats",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"admin",
								"stats"
							]
						},
						"description": "Get statistics including total items sold, purchase amount, and discount information"
					},
					"response": []
				},
				{
					"name": "Get All Discount Codes",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/admin/discount-codes",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"admin",
								"discount-codes"
							]
						},
						"description": "Get all generated discount codes"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "cartId",
			"value": "",
			"type": "string"
		},
		{
			"key": "itemId",
			"value": "",
			"type": "string"
		}
	]
}
